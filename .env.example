# Telegram bot credentials
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_ID=

# Public base URL for links in bot messages (where your nginx gateway is reachable)
# Example: http://94.141.162.70:8080
PUBLIC_BASE_URL=

# ---- Database (optional) ----
# По умолчанию используется SQLite в ./data/db/app.db и ничего указывать не нужно.
#
# Если хочешь использовать внешний Postgres — заполни ЛИБО DATABASE_URL,
# ЛИБО набор POSTGRESQL_* (удобно как у тебя):
#
# DATABASE_URL=postgresql://user:password@host:5432/dbname

POSTGRESQL_HOST=
POSTGRESQL_PORT=5432
POSTGRESQL_USER=
POSTGRESQL_PASSWORD=
POSTGRESQL_DBNAME=
