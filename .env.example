# ======================
# ОБЩЕЕ
# ======================

# Внешний URL панели (используется для генерации ссылок)
APP_BASE_URL=http://127.0.0.1:8080

# JWT для сессий веб-панели (обязательно поменять в проде)
JWT_SECRET=change_me

# База данных OBS (по умолчанию SQLite в ./data/db/obs.db)
DATABASE_URL=sqlite:////data/db/obs.db

# HLS URL (прокси nginx)
HLS_BASE_URL=http://127.0.0.1:8080/hls

# Автоудаление клипов после отправки
AUTO_DELETE=1
CLIP_SECONDS=420

# Ограничение Telegram на размер файла (в МБ)
TELEGRAM_MAX_MB=50


# ======================
# TELEGRAM BOT (клипы + одобрение регистрации)
# ======================

# Токен Telegram-бота
TELEGRAM_BOT_TOKEN=

# Чат ID администратора (куда прилетает кнопка "Одобрить/Отклонить" при регистрации)
TELEGRAM_ADMIN_ID=

# Включить обязательное одобрение регистрации (1/0)
APPROVAL_REQUIRED=1


# ======================
# STEAMSLOT (админка /steamslot)
# ======================

# Отдельная БД SteamSlot (ВАЖНО: не используйте DATABASE_URL OBS!)
STEAMSLOT_DATABASE_URL=sqlite:////data/db/steamslot.db

# Доступ в админку SteamSlot
STEAMSLOT_ADMIN_USER=admin
STEAMSLOT_ADMIN_PASS=change_me

# Cookie-session (Fernet key). Если пусто — ключ будет сгенерен на старте, сессии сбросятся при рестарте.
# Генерация: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
STEAMSLOT_SESSION_KEY=
STEAMSLOT_SESSION_TTL_SECONDS=43200
STEAMSLOT_COOKIE_SECURE=0


# ======================
# WORKER / API keys
# ======================

# Мастер-ключ API для системных запросов (опционально)
MASTER_API_KEY=

# Ключ шифрования файлов аккаунтов (опционально, если используете импорт/экспорт секретов)
FILE_ENC_KEY=
